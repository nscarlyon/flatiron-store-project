    <!-- Page Content -->
    <div class="container">

        <!-- Jumbotron Header -->
        <header class="jumbotron hero-spacer">
            <h1>A Warm Welcome!</h1>
            <p>This is one of my Ruby on Rails apps. A user can add any of the items below to their personal cart and
              checkout. It is a work in progress, so you might see some changes in the future!=) You may check out the
              code on Github <a href="https://github.com/nscarlyon/flatiron-store-project">here</a>. </p>

            <%= render 'social_icons' %>
        </header>
        <hr>

        <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>Latest Features</h3>
            </div>
        </div>
        <!-- /.row -->

        <%@items.each_slice(4) do |three_items| %>
          <div class="row text-center" id="store-items">

          <%three_items.each do |item| %>
              <div class="col-md-3 col-sm-6">
                  <div class="thumbnail">
                      <img src="https://placehold.it/800x500" alt="">
                      <div class="caption">
                          <h2><%= item.title %></h2>
                          <p><%= number_to_currency(item.price.to_f/100) %> | <%= item.inventory %> in stock</p>
                          <p>
                              <%= button_to 'Add to Cart', line_items_path(item_id: item)%><a href="/items/<%=item.id%>" class="btn btn-default">More Info</a>
                          </p>
                      </div>
                  </div>
              </div>
            <%end%>
          </div>
        <%end%>
      </div>
        <hr>
    </div>
    <!-- /.container -->
